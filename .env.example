# =============================================================================
# Fuel Tracker - Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# SECURITY: Never commit .env file to version control!

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_NAME=fuel_tracker
DB_USER=fuel_user
DB_PASSWORD=your-secure-password-here-change-me
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# Django Configuration
# =============================================================================
# SECURITY: Generate a secure SECRET_KEY for production
# You can generate one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Debug mode (NEVER set to True in production!)
DEBUG=True

# Allowed hosts (comma-separated list)
# Production example: ALLOWED_HOSTS=example.com,www.example.com,api.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (comma-separated list)
# Production example: CORS_ALLOWED_ORIGINS=https://app.example.com,https://www.example.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# CSRF trusted origins (comma-separated list)
# Production example: CSRF_TRUSTED_ORIGINS=https://app.example.com,https://www.example.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Redis Configuration (Caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# Frontend Configuration
# =============================================================================
# Backend API URL
VITE_API_URL=http://localhost:8000

# =============================================================================
# Development Seeds (Optional)
# =============================================================================
# Set to 'true' to automatically seed development data on startup
# SEED_DEV_DATA=false

# =============================================================================
# Production Notes
# =============================================================================
# For production deployment:
# 1. Set DEBUG=False
# 2. Generate a strong SECRET_KEY
# 3. Set specific ALLOWED_HOSTS (no wildcards)
# 4. Set specific CORS_ALLOWED_ORIGINS (HTTPS only)
# 5. Use strong DB_PASS (min 16 characters, mixed case, numbers, symbols)
# 6. Consider using environment-specific .env files (.env.production)
# 7. Use secrets management (AWS Secrets Manager, HashiCorp Vault, etc.)
