FROM node:20-alpine

WORKDIR /app

# Копируем package files
COPY package*.json ./

# Устанавливаем зависимости
RUN npm ci

# Копируем конфигурационные файлы (важен порядок для правильного резолва импортов)
COPY tsconfig*.json ./
COPY vite.config.ts ./
COPY postcss.config.js ./
COPY tailwind.config.ts ./
COPY index.html ./

# Копируем исходники
COPY src ./src
COPY public ./public

# Expose порт для Vite dev server
EXPOSE 3000

# Запускаем dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

